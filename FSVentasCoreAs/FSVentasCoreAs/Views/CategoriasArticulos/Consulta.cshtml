@model IEnumerable<FSVentasCoreAs.Models.CategoriasArticulos>

@{
    ViewData["Title"] = "Consulta";
}

<h2>Index</h2>

<p>
    <a asp-action="Crear">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.CategoriaId">Editar</a> |
                <a asp-action="Detalle" asp-route-id="@item.CategoriaId">Detalle</a> |
                <a asp-action="Eliminar" asp-route-id="@item.CategoriaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index">Reporte</a>
</div>
